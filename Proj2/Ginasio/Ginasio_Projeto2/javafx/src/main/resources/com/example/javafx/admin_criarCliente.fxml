    <TextField layoutX="816.0" layoutY="356.0" prefHeight="35.0" prefWidth="250.0" promptText="Telemóvel">
      <cursor>
         <Cursor fx:constant="TEXT" />
      </cursor></TextField>
    <TextField layoutX="558.0" layoutY="449.0" prefHeight="35.0" prefWidth="250.0" promptText="Email">
      <cursor>
         <Cursor fx:constant="TEXT" />
      </cursor></TextField>
    <TextField layoutX="263.0" layoutY="540.0" prefHeight="35.0" prefWidth="250.0" promptText="NIF">
      <cursor>
         <Cursor fx:constant="TEXT" />
      </cursor></TextField>
    <TextField layoutX="816.0" layoutY="540.0" prefHeight="35.0" prefWidth="250.0" promptText="Código Postal">
      <cursor>
         <Cursor fx:constant="TEXT" />
      </cursor></TextField>
    <!-- Botões -->
    <Button layoutX="313.0" layoutY="673.0" mnemonicParsing="false" onAction="#onActionAnterior" onMouseClicked="#onActionAnterior" prefHeight="35.0" prefWidth="200.0" style="-fx-background-color: #ff8600;" text="Anterior" />
    <Button layoutX="816.0" layoutY="673.0" mnemonicParsing="false" onAction="#onActionGuardar" onMouseClicked="#onActionGuardar" prefHeight="35.0" prefWidth="200.0" style="-fx-background-color: #ff8600;" text="Guardar" />
