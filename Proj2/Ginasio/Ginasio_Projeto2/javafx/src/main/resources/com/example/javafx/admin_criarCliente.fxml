         <Cursor fx:constant="TEXT" />
      </cursor></TextField>
    <TextField layoutX="263.0" layoutY="246.0" prefHeight="35.0" prefWidth="250.0" promptText="ID">
      <cursor>
         <Cursor fx:constant="TEXT" />
      </cursor></TextField>
    <PasswordField layoutX="816.0" layoutY="246.0" prefHeight="35.0" prefWidth="250.0" promptText="Password">
      <cursor>
         <Cursor fx:constant="TEXT" />
      </cursor></PasswordField>
    <DatePicker layoutX="263.0" layoutY="356.0" prefHeight="35.0" prefWidth="250.0" promptText="Data de Nascimento">
