        </font>
    </Text>

    <!-- Logo -->
    <Rectangle arcHeight="10.0" arcWidth="10.0" fill="BLACK" height="39.0" layoutX="6.0" layoutY="1.0" stroke="BLACK" strokeType="INSIDE" width="39.0" />
    <Text fill="#ff8600" layoutX="5.0" layoutY="29.0" text="L" textAlignment="CENTER" wrappingWidth="42.0">
        <font> <Font size="25.0" /> </font>
    </Text>

    <!-- Exit -->
    <ImageView fitHeight="33.0" fitWidth="39.0" layoutX="1325.0" layoutY="4.0" onMouseClicked="#onActionExit" pickOnBounds="true" preserveRatio="true">
        <Image url="@../../../../../images/windows-exit-icon-29.jpg" />
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
    </ImageView>

    <!-- Resto -->
    <!-- Informação -->
